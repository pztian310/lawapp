<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="54dp"
    android:id="@+id/custom_edittext"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/custom_edittext_left_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            />
        <EditText
            android:id="@+id/custom_edittext_center_edittext"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="25dp"
            android:layout_weight="1"
            android:background="@null"
            />
        <ImageView
            android:id="@+id/custom_edittext_right_clear"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/custom_edittext_clear"
            android:layout_gravity="center_vertical"
            android:scaleType="centerInside"
            />
        <ImageView
            android:id="@+id/custom_edittext_issee_password"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:scaleType="centerInside"
            android:layout_marginRight="10dp"
            android:src="@drawable/custom_edittext_password"
            android:layout_gravity="center_vertical"
            android:visibility="gone"
            />
    </LinearLayout>
    <View
        android:id="@+id/custom_edittext_buttom_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCC"
        />
</LinearLayout>