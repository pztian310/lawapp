<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ededed"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:background="@drawable/timg"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/fragment_iv_head"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:src="@mipmap/lawconsult_icon" />

        <TextView
            android:id="@+id/fragment_tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fragment_tv_nickname"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/fragment_tv_signature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fragment_tv_signature"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="#ffffff"
        >
        <Button
            android:id="@+id/fragment_btn_publish"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:drawableLeft="@drawable/fabiao"
            android:drawableRight="@drawable/fanhui"
            android:paddingRight="10dp"
            android:gravity="left|center"
            android:textSelectHandleLeft="@drawable/fanhui"
            android:paddingLeft="20dp"
            android:background="@null"
            android:drawablePadding="6dp"
            android:text="我的发布"/>
   <!-- <Button
        android:id="@+id/fragment_btn_publish"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:drawableTop="@drawable/fabiao"
        android:text="发布"
        android:background="@null"/>
    <Button
        android:id="@+id/fragment_bt_attention"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:drawableTop="@drawable/xiazai13"
        android:background="@null"

        android:text="关注"/>
    <Button
        android:id="@+id/fragment_bt_fans"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:drawableTop="@drawable/fensi"
        android:background="@null"
        android:text="粉丝"/>
    <Button
        android:id="@+id/fragment_bt_praise"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:drawableTop="@drawable/zan"
        android:background="@null"
        android:text="获赞"/>-->

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:background="#ffffff">

        <Button
            android:id="@+id/fragment_bt_applylawyer"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:drawableLeft="@drawable/lvshi"
            android:drawableRight="@drawable/fanhui"
            android:paddingRight="10dp"
            android:gravity="left|center"
            android:textSelectHandleLeft="@drawable/fanhui"
            android:paddingLeft="20dp"
            android:background="@null"
            android:drawablePadding="6dp"
            android:text="申请律师"/>
        <View
            android:id="@+id/fragment_v_apply"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ededed"
            android:layout_marginLeft="50dp"/>

        <Button
            android:id="@+id/fragment_bt_casecollection"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@null"
            android:drawableLeft="@drawable/collect"
            android:drawableRight="@drawable/fanhui"
            android:drawablePadding="6dp"
            android:gravity="left|center"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:text="案例收藏" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:background="#ffffff">
        <Button
            android:id="@+id/fragment_bt_setting"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:drawableLeft="@drawable/shezhi"
            android:drawableRight="@drawable/fanhui"
            android:paddingRight="10dp"
            android:paddingLeft="20dp"
            android:drawablePadding="6dp"
            android:text="设置"
            android:gravity="left|center"
            android:onClick="install"
            android:background="@null"/>

    </LinearLayout>
</LinearLayout>
