<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f8f8">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/adapter_reply_lawyer_avatar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/c" />
    <TextView
        android:id="@+id/adapter_reply_lawyer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/adapter_reply_lawyer_avatar"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:textSize="16sp"
        android:textColor="#919191"
        android:text="陈胜梁律师"/>
    <TextView
        android:id="@+id/adapter_reply_lawyer_workaddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/adapter_reply_lawyer_name"
        android:layout_toRightOf="@+id/adapter_reply_lawyer_avatar"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:textSize="12sp"
        android:textColor="#bcbcbc"
        android:text="重庆能源律师事务所"
        />
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/lawyerlogo"
        android:layout_toRightOf="@+id/adapter_reply_lawyer_name"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"/>
    <TextView
        android:id="@+id/adapter_reply_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_toRightOf="@+id/adapter_reply_lawyer_avatar"
        android:layout_below="@+id/adapter_reply_lawyer_avatar"
        android:layout_marginLeft="5dp"
        android:paddingRight="5dp"
        android:text="Iconfont-国内功能很强大且图标内容很丰富的矢量提供矢量图标下载、在线存储、格式转换等功能。阿里巴巴体验团队倾力打造,设计和前端开发的便..."/>
        <TextView
            android:id="@+id/adapter_reply_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2019年4月12日 11:37"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:textSize="12sp"/>
</RelativeLayout>
