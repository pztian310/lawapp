<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:pxxy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <ImageView
            android:id="@+id/activity_search_img"
            android:layout_width="25dp"
            android:layout_height="45dp"
            android:src="@mipmap/back" />
        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/activity_search_spinner"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:entries="@array/statute"
            android:dropDownSelector="#ff0000"
            android:layout_weight="4"/>
        <EditText
            android:id="@+id/activity_search_autotext"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="45dp"
            android:hint="搜索"
            android:maxLines="1"
            android:background="@null"
            />
        <Button
            android:id="@+id/activity_serach_btn"
            android:layout_width="60dp"
            android:layout_height="45dp"
            android:background="@drawable/loign_activity_login_button"
            android:text="搜索"/>
    </LinearLayout>
    <ListView
        android:id="@+id/activity_search_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
