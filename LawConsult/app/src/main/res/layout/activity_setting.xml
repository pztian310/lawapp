<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".activitys.SettingActivity"
    android:background="#ededed">
    <com.pxxy.lawconsult.view.CustomTitleView
        android:id="@+id/setting_bt_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title_center_textView_text="设置"
        app:title_center_textView_textSize="20sp"
        app:title_leftButton_resource="@mipmap/back"
        app:title_center_textView_textColor="#000000"
        app:title_background="#ededed"

        app:title_leftButton_visibility=""/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#ffffff">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/setting_bt_phone"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@null"
                android:drawablePadding="6dp"
                android:gravity="left|center"
                android:paddingLeft="20dp"
                android:paddingRight="10dp"
                android:text="手机号码" />
            <TextView
                android:id="@+id/setting_tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="25dp"
                android:layout_centerInParent="true"
                android:text="17770626679"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ededed"
            android:layout_marginLeft="50dp"/>
        <Button
            android:id="@+id/setting_bt_password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:drawableRight="@drawable/fanhui"
            android:paddingRight="10dp"
            android:gravity="left|center"
            android:paddingLeft="20dp"
            android:background="@null"
            android:drawablePadding="6dp"
            android:text="修改密码"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#ffffff"
        android:layout_marginTop="30dp">
        <Button
            android:id="@+id/setting_bt_relation"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:drawableRight="@drawable/fanhui"
            android:paddingRight="10dp"
            android:gravity="left|center"
            android:paddingLeft="20dp"
            android:background="@null"
            android:drawablePadding="6dp"
            android:text="联系客服"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ededed"
            android:layout_marginLeft="50dp"/>
        <Button
            android:id="@+id/setting_bt_idea"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:drawableRight="@drawable/fanhui"
            android:paddingRight="10dp"
            android:gravity="left|center"
            android:paddingLeft="20dp"
            android:background="@null"
            android:drawablePadding="6dp"
            android:text="意见反馈"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ededed"
            android:layout_marginLeft="50dp"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <Button
            android:id="@+id/setting_bt_update"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingRight="10dp"
            android:gravity="left|center"
            android:paddingLeft="20dp"
            android:background="@null"
            android:drawablePadding="6dp"
            android:text="版本更新"/>
            <TextView
                android:id="@+id/setting_tv_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="25dp"
                android:layout_centerInParent="true"
                android:text="1.0.0"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#ffffff"
        android:layout_marginTop="30dp">
        <Button
            android:id="@+id/setting_bt_exit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:drawableRight="@drawable/fanhui"
            android:paddingRight="10dp"
            android:gravity="left|center"
            android:paddingLeft="20dp"
            android:background="@null"
            android:drawablePadding="6dp"
            android:text="退出"/>

    </LinearLayout>
</LinearLayout>