<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/recyclerview_selector"
    >



    <ImageView
        android:id="@+id/adapter_case_recyclerview_image"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/a"
        android:scaleType="centerCrop"
        android:layout_marginLeft="10dp"
        />
    <TextView
        android:id="@+id/adapter_case_recyclerview_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/adapter_case_recyclerview_image"
        android:layout_marginLeft="10dp"
        android:layout_alignTop="@id/adapter_case_recyclerview_image"
        android:textSize="18sp"
        android:lines="2"
        android:textColor="#333333"
        android:ellipsize="end"
        android:layout_marginRight="10dp"
        />
    <TextView
        android:id="@+id/adapter_case_recyclerview_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/adapter_case_recyclerview_title"
        android:layout_toRightOf="@id/adapter_case_recyclerview_image"
        android:layout_marginLeft="10dp"
        android:layout_alignBottom="@id/adapter_case_recyclerview_image"
        android:textSize="12sp"
        android:layout_marginTop="5dp"
        android:textColor="#cccccc"
        />
</RelativeLayout>